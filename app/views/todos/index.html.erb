
<h1>ToDo List App </h1>
<br>
<%= link_to 'Crear ToDo', todos_new_path, class:'btn btn-success' %>

<br>

<table>
<br>
    <tr>
        <th>Description:</th>

    </tr>

    <% @todos.each do |todo| %>    
        <tr>  
            <td><%= todo.description %>
            <td><% todo.completed %>
            <%= link_to 'Show', todo_path(todo), class:'btn btn-success' %>
            <%= link_to 'Edit', edit_path(todo), class:'btn btn-warning' %>
            <%= link_to 'Destroy', destroy_path(todo), class:'btn btn-danger' %>
            <%= link_to 'Completed', completed_path(todo), class:'btn btn-info' %>
        </tr>
           
    <% end %>  

</table>

 

